{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",
    "allowJs": true,                     
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "strict": true,                         
    "moduleResolution": "node",
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": ["dist", "public"]
}
